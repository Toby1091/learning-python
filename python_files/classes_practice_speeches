# creating class for central bank speeches

class Speech:
    
    def __init__(self, author, date, speech_length, keyword_count):     #this is the constructor
        self.author = author
        self.date = date
        self.speech_length = speech_length
        self.keyword_count = keyword_count

    def keyword_share()self:
        return"{} {}".format(self.keyword_count/self.speech_length)

speech_1 = Speech("Mauderer", "02032022", 1000, 10)

print(speech_1)